			<texPath>Things/Pawn/Humanlike/Apparel/MechaniteUnderArmor/MechaniteUnderArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.1</drawSize>
		</graphicData>
		<statBases>
			<WorkToMake>9000</WorkToMake>
			<MaxHitPoints>400</MaxHitPoints>
			<Mass>4</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>0.90</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.3</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<Insulation_Cold>5</Insulation_Cold>
			<Insulation_Heat>5</Insulation_Heat>
			<EquipDelay>5</EquipDelay>
		</statBases>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<costList>
			<Cloth>70</Cloth>
			<Steel>50</Steel>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/MechaniteUnderArmor/MechaniteUnderArmor</wornGraphicPath>
			<layers>
				<li>OnSkin</li>
			</layers>
		</apparel>
		<tickerType>Normal</tickerType>
		<comps>
			<li Class="VFECore.CompProperties_ApparelHediffs">
				<hediffDefnames>
					<li>VFE_MechaniteUnderArmorHediff</li>
				</hediffDefnames>
			</li>
		</comps>
