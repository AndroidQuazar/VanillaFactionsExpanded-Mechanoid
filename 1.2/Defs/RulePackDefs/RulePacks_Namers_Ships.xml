<?xml version="1.0" encoding="utf-8" ?>
<Defs>

 
  <!-- Mechanoid Frigate -->

  <RulePackDef>
    <defName>VFE_NamerShipFrigate</defName>
    <include>
      <li>ArtNameUtility</li>
    </include>
    <rulePack>
      <rulesStrings>
        <li>r_name->[shiptype] [maybe_letter][Digit][Digit][maybe_letter]</li>
        <li>r_name->[shiptype] [maybe_letter][Digit][Digit][Digit][maybe_letter]</li>

        <li>shiptype->frigate</li>
		
        <li>maybe_letter(p=3)-></li>
        <li>maybe_letter->[Letter]</li>
        <li>maybe_letter->[Letter][Letter]</li>
      </rulesStrings>
    </rulePack>
  </RulePackDef>
  
