		<graphicData>
			<texPath>Things/Item/Equipment/WeaponRanged/MechanoidFlamer</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>1400</MarketValue>
			<Mass>18</Mass>
			<RangedWeapon_Cooldown>8.4</RangedWeapon_Cooldown>
